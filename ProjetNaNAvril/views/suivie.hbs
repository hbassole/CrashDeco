    <div class="container">
    

        <div class="row col-md-6 col-md-offset-3 box">
            <form action="/savesuivie" method="post" role="form" >
                    <h2 style="text-align: center; color: #337ab7">  SUIVIE DES TRAVAUX</h2>

                    <div class="col-lg-6">
                        <label for="nom_suivie">Type travaux*</label>
                        <input type="text" name="nom_suivie" class="form-control" placeholder="nom" required> 
                    </div>
                        <div class="col-lg-6">
                            <label for="date_suivie">Date*</label>
                            <input type="date" name="date_suivie" class="form-control" placeholder="date" required>
                        </div>
                        <div class="col-lg-6">
                            <label for="heure_suivie">Heure*</label>
                            <input type="time" name="heure_suivie" class="form-control" placeholder="time" required>
                        </div>
                        <div class="col-lg-6">
                            <label for="image_suivie">Image</label>
                            <input type="file" name="image_suivie" class="form-control" placeholder="image" required>
                        </div>
                        <div class="col-lg-12">
                            <label for="text_suivie">Compte rendu</label>
                          <textarea type="text" name="text_suivie" class="form-control" placeholder="compte rendu" required></textarea>
                            <br>
                            <input class="col-lg-8 col-lg-offset-2 btn btn-primary" type="submit">
                        </div>
                        
            </form>
        </div>

    </div>
   
